      <div class="contents-menu" style="background-image:url('@Context.GetLink("/img/main_blog.png")');">
        <a class="contents-font">TECH BLOG</a>
        <a href="@Context.GetLink(document_posts)" class="contents-link"></a>
      </div>
      <div class="contents-menu" style=" background-image:url('@Context.GetLink("/img/main_til.png")');">
        <a class="contents-font">TIL (Today I Learned)</a>
        <a href="@Context.GetLink(document_tils)" class="contents-link"></a>
      </div>
      <div class="contents-menu" style="background-image:url('@Context.GetLink("/img/main_about.png")');">
        <a class="contents-font">ABOUT</a>
        <a href="@Context.GetLink(document_about)" class="contents-link"></a>
      </div>
    </div>
  </div>
