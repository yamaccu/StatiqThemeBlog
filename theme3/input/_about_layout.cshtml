<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>@Document.GetString("title") | @Context.GetString("SiteTitle")</title>

  <link href="@Context.GetLink("/scss/tech.css")" rel="stylesheet" type="text/css">

  <link rel="shortcut icon" href="@Context.GetLink("/favicon.ico")" type="image/x-icon">
  <link rel="icon" href="@Context.GetLink("/favicon.ico")" type="image/x-icon">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap" rel="stylesheet">

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-197465108-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', 'UA-197465108-1');
  </script>

  <meta property="og:title" content="about" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="@Document.GetLink(true)" />
  <meta property="og:site_name" content="@Context.GetString("SiteTitle")" />
  <meta property="og:locale" content="ja_JP" />
</head>

<header style="background-image:url('@Context.GetLink("/img/main2.png")')">
@{
    IDocument document_index = Outputs.Get("index.html");
}
  <div class="flex-wrap">
    <div>
    @if(@Document.GetString("title")=="About")
    {
      IDocument document;
      document = Outputs.Get("about.html");
     
      <a href="@Context.GetLink(document)" class="title">
        ABOUT
      </a>
    }
    else
    {
      IDocument document;
      document = Outputs.Get("tech.html");
     
      <a href="@Context.GetLink(document)" class="title">
        TECH BLOG
      </a>
    }
    
    </div>
    <div class="ext-link">
      <a href="@Context.GetLink(document_index)"><img src="@(Context.GetLink("/img/home.png"))" class="ext-link-icon"
          alt="homeへのリンク"></a>&nbsp;&nbsp;
      <a href="https://twitter.com/YY87750722"><img src="@(Context.GetLink("/img/twitter.png"))" class="ext-link-icon"
          alt="twitterへのリンク"></a>&nbsp;&nbsp;
      <a href="https://github.com/yamaccu"><img src="@(Context.GetLink("/img/github.png"))" class="ext-link-icon"
          alt="githubへのリンク"></a>
    </div>
  </div>
  <br>
</header>

<body class="body-font">
  <div class="body-about">
    <br>
    @RenderBody()
  </div>
</body>

</html>
