<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>about | @Context.GetString("SiteTitle")</title>

    <link href="@Context.GetLink("/scss/posts.css")" rel="stylesheet" type="text/css">
    <script src="@Context.GetLink("/js/jquery-3.6.0.min.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.19.0/components/prism-core.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.19.0/plugins/autoloader/prism-autoloader.min.js" data-no-mirror></script>

    <link rel="shortcut icon" href="@Context.GetLink("/favicon.ico")" type="image/x-icon">
    <link rel="icon" href="@Context.GetLink("/favicon.ico")" type="image/x-icon">

    <link href="https://fonts.googleapis.com/css?family=Caveat" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap" rel="stylesheet">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-197465108-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-197465108-1');
    </script>
  </head>

  <header style="background-image:url('@Context.GetLink("/img/main2.png")')">
    @{
      IDocument document;
      IDocument document_index = Outputs.Get("index.html");
      document=Outputs.Get("about.html");
    }
    <div class="flex-wrap">
      <div>
        <a href="@Context.GetLink(document)" class="title">
          ABOUT
        </a>
      </div>
      <div class="ext-link">
        <a href="@Context.GetLink(document_index)"><img src="@(Context.GetLink("/img/home.png"))" class="ext-link-icon"></a>&nbsp;&nbsp;
        <a href="https://twitter.com/YY87750722"><img src="@(Context.GetLink("/img/twitter.png"))" class="ext-link-icon"></a>&nbsp;&nbsp;
        <a href="https://github.com/yamaccu"><img src="@(Context.GetLink("/img/github.png"))" class="ext-link-icon"></a>
      </div>
    </div>
    <br>
  </header>

  <body class="body-font">
    <div style="max-width:850px;">
      <br>
      @RenderBody()
    </div>
  </body>
</html>
