    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-197465108-1');
    </script>
  </head>

  <header style="background-image:url('@Context.GetLink("/img/main2.png")')">
    @{
      IDocument document_index = Outputs.Get("index.html");
      IDocument document_tils = Outputs.Get("tils.html");
      IDocument document_about = Outputs.Get("about.html");
    }
      <div class="header">
        <br>
        <a href="@Context.GetLink(document_index)" class="title">
          yokuaru Tech notes
        </a>
        <br>
        <br>
        <label class="">フツーのエンジニアの技術ブログです</label>
      </div>
      <div class="ext-link">
        <a href="@Context.GetLink(document_index)"><img src="@(Context.GetLink("/img/home.png"))" class="ext-link-icon"></a>&nbsp;&nbsp;
        <a href="https://twitter.com/YY87750722"><img src="@(Context.GetLink("/img/twitter.png"))" class="ext-link-icon"></a>&nbsp;&nbsp;
        <a href="https://github.com/yamaccu"><img src="@(Context.GetLink("/img/github.png"))" class="ext-link-icon"></a>
      </div>
  </header>

  <body class="body-font">
  <br>
  <br>

  <div>
    <h1><img src="/img/star4.png" class="image-star">コンテンツ<img src="/img/star4.png" class="image-star"></h1>
    <div class="flex-wrap-center">
      <div class="contents-menu" style="background-image:url('@Context.GetLink("/img/main_blog.png")');">
        <a class="contents-font">TECH NOTES</a>
        <a href="#NEWPOSTS" class="contents-link"></a>
      </div>
      <div class="contents-menu" style=" background-image:url('@Context.GetLink("/img/main_til.png")');">
        <a class="contents-font">TIL (Today I Learned)</a>
        <a href="@Context.GetLink(document_tils)" class="contents-link"></a>
      </div>
      <div class="contents-menu" style="background-image:url('@Context.GetLink("/img/main_about.png")');">
        <a class="contents-font">ABOUT</a>
        <a href="@Context.GetLink(document_about)" class="contents-link"></a>
      </div>
    </div>
　</div>
  <br>
  <br>
  <br>
  <h1><img src="/img/star2.png" class="image-star"><a id="NEWPOSTS">TECH NOTES</a><img src="/img/star2.png" class="image-star"></h1>


